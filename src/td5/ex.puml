@startuml
'https://plantuml.com/state-diagram
State Montre {
    State "Afficher heure" as m1
    State "Chronometre" as m2
    State "Reglage" as m3

    [*] --> m1
    m1 -> m2 : bouton mode
    m2 --> m3 : bouton mode
    m3 --> m1 : bouton mode
    --
    [*] -> LumiereEteinte
    LumiereEteinte -> LumiereAllumee : bouton light
    LumiereAllumee -> LumiereEteinte : 2 secondes
    LumiereAllumee --> LumiereAllumee : bouton light

}


}
@enduml